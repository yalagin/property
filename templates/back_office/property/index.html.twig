{% extends '/back_office/property/property_base.html.twig' %}

{% block page_title %} {{ parent() }} Activity{% endblock page_title %}

{% block property_content_title %} Activity {% endblock property_content_title %}

{% block msg_for_user %}
    <p>
        Probable commission on {{ property.name }} is ${{property.commissionAmount}}. To increase the probability you get
        this listing, we are communicating with the owner at least every two weeks on your behalf. We will make you look
        great because you are great.
    </p>
{% endblock msg_for_user %}

{% block property_content %}
    {% for activity in property.activities %}
        <li>
            {% if activity is  isInstanceOf('CelebrityAgent\\Entity\\Activity\\NoteActivity') %}
                Note  with text {{ activity.text }} <br> created {{  activity.created|date('F d, Y') }} <br> by {{ activity.owner.firstName }}
            {% endif %}
            {% if activity is  isInstanceOf('CelebrityAgent\\Entity\\Activity\\EmailActivity') %}
                Email  with body {{ activity.text }}  <br> created {{  activity.created|date('F d, Y') }} <br> by {{ activity.owner.firstName }}
            {% endif %}
        </li>
    {% endfor %}
{% endblock property_content %}

